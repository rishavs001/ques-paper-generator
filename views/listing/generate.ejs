<% layout("/layouts/boilerplate")%>

  <body>
    <h1>Generate Question Paper</h1>
    <form id="myForm" action="/listings/generate" method="POST">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="listing[subject]">Select Subject :</label>
          <select class="form-control" id="subject" name="subject">
            <% subject.forEach(function(subject){ %>
              <option value="<%= subject %>">
                <%= subject %>
              </option>
              <% }); %>
          </select>
        </div>
      </div>

      <div class="form-group col-md-6">
        <label for="difficulty">Difficulty Percentage:</label>
        <div class="form-group col-md-6">
          <label for="easy">EASY</label>
          <input id="easy" type="text" name="Easy" placeholder="Easy Percentage" class="form-control" required />
        </div>
        <div class="form-group col-md-6">
          <label for="medium">MEDIUM</label>
          <input id="medium" type="text" name="Medium" placeholder="Medium Percentage" class="form-control" required />
        </div>
        <div class="form-group col-md-6">
          <label for="hard">HARD</label>
          <input id="hard" type="text" name="Hard" placeholder="Hard Percentage" class="form-control" required />
        </div>
      </div>

      <br />

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="max_marks">Max Marks:</label>
          <input type="number" class="form-control" id="max_marks" name="max_marks" min="1" max="100" required />
        </div>
      </div>

      <br /><br />
      <input type="submit" class="btn btn-success" value="Generate Question Paper" />
    </form>
  </body>